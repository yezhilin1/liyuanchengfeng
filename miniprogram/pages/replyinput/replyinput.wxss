/* pages/replyinput/replyinput.wxss */
.page{
  margin: 0;
  padding: 0;
  width:100%;
  height:100%;
  
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-image:url('//wx2.sinaimg.cn/mw690/0067gnlhgy1gasogfjxzcj30u01hc119.jpg') ;
  background-size: 100% 100%;
  background-repeat: no-repeat; 
  /* overflow: scroll; */
}
.contentinput{
  height: 330px;
  width: 330px;
  border: 2px solid #46A3FF;
  border-radius: 15px;
  margin:8px 8px;
  padding: 3px;
}
.pic-uploader{
  
  margin-left: 5px;
}
.weui-uploader-input-box{
  height: 60px;
  width: 60px;
  margin-left: 5px;
  
  background-image: url('https://wx4.sinaimg.cn/mw690/0067gnlhgy1gadwv16dauj30dw0dw3yl.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  
}
.pic-uploader-bd{
  margin-top: 3px;
  width: 100%;
  background-color:  #F0F0F0;
}
.pic-uploader-bd image{
  float: left;
  margin: 5px 8px;
  width: 60px;
  height: 60px;
  
}
.post{
  height: 50px;
  width: 80%;
  background-color:dodgerblue;
  position: fixed;
  bottom: 50px;
  margin:5px 0 15px 30px;
  border: 2px solid #B9B9FF;
  border-radius: 18px;
  text-align: center;
  line-height: 30px;
  font-size: 150%;
}
.back{
  height: 50px;
  width: 80%;
  background-color:dodgerblue;
  position: fixed;
  bottom: 0px;
  margin:15px 0 10px 30px;
  border: 2px solid #B9B9FF;
  border-radius: 18px;
  text-align: center;
  line-height: 30px;
  font-size: 150%;
}