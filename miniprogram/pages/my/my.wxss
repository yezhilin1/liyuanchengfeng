/* pages/my/my.wxss */
.page{
  margin: 0;
  padding: 0;
  width:100%;
  height:100%;
  overflow: hidden;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-image:url('//wx1.sinaimg.cn/mw690/0067gnlhgy1gaslleksfhj30u01hct9a.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  
}
.schoolbadge{
  height: 100px;
  width: 100px;
  margin: 50px auto;
}
.schoolbadge image{
  height: 100%;
  width: 100%;
}
@keyframes blink{
  0%{opacity: 0;}
  20%{opacity: 0.2;}
  40%{opacity: 0.4;}
  60%{opacity: 0.6;}
  80%{opacity: 0.8;}
  100%{opacity: 1;} 
}
.schoolbadge view{
  font-weight: bold;
  margin: 15px 0;
  font-size: 150%;
  font-family: FangSong;
  font-style: italic;
  color: orangered;
  animation: blink 10s linear infinite; 
  word-break:keep-all;       /* 不换行 */
  white-space:nowrap;
  position: relative;
  right: 80px;
  top: 10px;
}
