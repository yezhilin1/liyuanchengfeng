/* pages/post/post.wxss */
.page{
  margin: 0;
  padding: 0;
  width:100%;
  height:100%;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-image:url('//wx2.sinaimg.cn/mw690/0067gnlhgy1gasogfjxzcj30u01hc119.jpg') ;
  background-size: 100% 100%;
  background-repeat: no-repeat;
} 
.section{
  margin: 10px 5px;
}
.section text{
  float: left;
  
}
.picker{
  color: #46A3FF;
}
.title text{
  float: left;
  
}
.titleinput{
  border: 2px solid #46A3FF;
  border-radius: 15px;
  margin-bottom: 8px;
  margin-right: 3px;
  padding: 3px;
  overflow: hidden;
}
.bd{
  clear: both;
  /* background-color: #F0F0F0; */
}

.contentinput{
  height: 300px;
  width: 335px;
  border: 2px solid #46A3FF;
  border-radius: 15px;
  margin:8px 8px;
  padding: 3px;
}
.pic-uploader{
  margin-left: 5px;
}
.weui-uploader-input-box{
  height: 60px;
  width: 60px;
  margin-left: 5px;
  background-image: url('https://wx4.sinaimg.cn/mw690/0067gnlhgy1gadwv16dauj30dw0dw3yl.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  
}
.pic-uploader-bd{
  margin-top: 3px;
  width: 100%;
  background-color:  #F0F0F0;
}
.pic-uploader-bd image{
  float: left;
  margin: 5px 8px;
  width: 80px;
  height: 80px;
  
}
.post{
  height: 40px;
  width: 30%;
  background-color:dodgerblue;
  position: fixed;
  bottom: 5px;
  left: 30px;
  border: 2px solid #B9B9FF;
  border-radius: 18px;
  text-align: center;
  line-height: 30px;
  font-size: 150%;
}
.cancel{
  height: 40px;
  width: 30%;
  background-color:dodgerblue;
  position: fixed;
  bottom: 5px;
  right: 30px;
  border: 2px solid #B9B9FF;
  border-radius: 18px;
  text-align: center;
  line-height: 30px;
  font-size: 150%;
}
.wsui-btn__hover_btn{
  position: fixed;
  bottom: -1px;
  right: 25px;
  box-shadow:0px 0px 8px rgba(0, 0, 0, .1) inset; 
}